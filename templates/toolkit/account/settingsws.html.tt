<div class="grd-grid-12 invisible" id="settingsContainer">
    <h1>[% l('Settings') %]</h1>
    
    <div class="grd-grid-3 grd-grid-mobile-6 grd-parent">
        <div class="grd-grid-8 grd-with-padding">
            <a class="pjaxload" href="[% request.url_for('/user/settings/detailsws') %]">
                <img class="responsive" src="[% request.url_for('images/pages/settings/detail.svg') %]">
            </a>
        </div>
        <div class="grd-grid-12">
            <h4>
                <a class="pjaxload" href="[% request.url_for('/user/settings/detailsws') %]">[% l('Personal Details') %]</a>
            </h4>
            <p>[% l('View your personal information.') %]</p>
        </div>
    </div>

    <div class="grd-grid-3 grd-grid-mobile-6 grd-parent real invisible">
        <div class="grd-grid-8 grd-with-padding">
            <a class="pjaxload" href="[% request.url_for('/user/settings/securityws') %]">
                <img class="responsive" src="[% request.url_for('images/pages/settings/security.svg') %]">
            </a>
        </div>
        <div class="grd-grid-12">
            <h4>
                <a class="pjaxload" href="[% request.url_for('/user/settings/securityws') %]">[% l('Security') %]</a>
            </h4>
            <p>[% l('Manage your account access and security settings.') %]</p>
        </div>
    </div>

    <div class="grd-grid-3 grd-grid-mobile-6 grd-parent real invisible">
        <div class="grd-grid-8 grd-with-padding">
            <a class="pjaxload" href="[% request.url_for('/user/self_exclusionws') %]">
                <img class="responsive" src="[% request.url_for('images/pages/settings/self-exclusion.svg') %]">
            </a>
        </div>
        <div class="grd-grid-12">
            <h4>
                <a class="pjaxload" href="[% request.url_for('/user/self_exclusionws') %]">[% l('Self Exclusion') %]</a>
            </h4>
            <p>[% l('Facility that allows you to set limits on your account.') %]</p>
        </div>
    </div>

    <div class="grd-grid-3 grd-grid-mobile-6 grd-parent real invisible">
        <div class="grd-grid-8 grd-with-padding">
            <a class="pjaxload" href="[% request.url_for('/cashier/limitsws') %]">
                <img class="responsive" src="[% request.url_for('images/pages/settings/limits.svg') %]">
            </a>
        </div>
        <div class="grd-grid-12">
            <h4>
                <a class="pjaxload" href="[% request.url_for('/cashier/limitsws') %]">[% l('Limits') %]</a>
            </h4>
            <p>[% l('View your trading and withdrawal limits.') %]</p>
        </div>
    </div>

    <div class="grd-clear real invisible"></div>

    <div class="grd-grid-3 grd-grid-mobile-6 grd-parent ja-hide real invisible">
        <div class="grd-grid-8 grd-with-padding">
            <a class="pjaxload" href="[% request.url_for('/user/assessment') %]">
                <img class="responsive" src="[% request.url_for('images/pages/settings/financial-assessment.svg') %]">
            </a>
        </div>
        <div class="grd-grid-12">
            <h4>
                <a class="pjaxload" href="[% request.url_for('/user/assessment') %]">[% l('Financial Assessment') %]</a>
            </h4>
            <p>[% l('View your financial assessment settings.') %]</p>
        </div>
    </div>

    <div class="grd-grid-3 grd-grid-mobile-6 grd-parent ja-hide">
        <div class="grd-grid-8 grd-with-padding">
            <a class="pjaxload" href="[% request.url_for('/user/api_tokenws') %]">
                <img class="responsive" src="[% request.url_for('images/pages/settings/api-token.svg') %]">
            </a>
        </div>
        <div class="grd-grid-12">
            <h4>
                <a class="pjaxload" href="[% request.url_for('/user/api_tokenws') %]">[% l('API Token') %]</a>
            </h4>
            <p>[% l('API token for third party applications.') %]</p>
        </div>
    </div>
